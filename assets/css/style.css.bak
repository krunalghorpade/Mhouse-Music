/* assets/css/style.css */

:root {
    --bg-color: #fbfbfb;
    --text-color: #050505;
    --accent-color: #f95738;
    --secondary-text: #666666;
    --border-color: #000000;

    --font-heading: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
    --font-body: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;

    --spacing-unit: 2rem;
    --header-height: 80px;
}

@media (prefers-color-scheme: dark) {
    :root {
        --bg-color: #0a0a0a;
        --text-color: #ffffff;
        --border-color: #ffffff;
    }
}

/* Reset & Base */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
    font-size: 14px;
    /* Slightly smaller base for that sleek expensive look */
}

body {
    background-color: var(--bg-color);
    color: var(--text-color);
    font-family: var(--font-body);
    font-weight: 400;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
}

a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
}

a:hover {
    color: var(--accent-color);
}

/* Typography */
h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.5px;
    /* Tight tracking */
    line-height: 1.1;
    margin: 0;
}

.page-title {
    font-size: clamp(3rem, 8vw, 6rem);
    margin-bottom: 4rem;
    border-bottom: 2px solid var(--accent-color);
    padding-bottom: 1rem;
    display: inline-block;
}

/* Layout */
.container {
    padding: 0 2rem;
    max-width: 1600px;
    /* Wide */
    margin: 0 auto;
}

main {
    padding-top: 100px;
    padding-bottom: 6rem;
    min-height: 80vh;
}

/* Navigation */
header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    padding: 2rem;
    background: var(--bg-color);
    /* Solid bg for clean look */
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.brand {
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: -1px;
}

.brand span {
    color: var(--accent-color);
}

nav {
    display: flex;
    gap: 2rem;
}

nav a {
    text-transform: uppercase;
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
}

/* Mobile Nav Toggle (Hidden for now, relying on scroll/simple layout) */

/* General Grid */
.grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 3rem;
}

/* Cards (Merch, Releases) */
.card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.card-image {
    width: 100%;
    aspect-ratio: 1/1;
    background-color: #eee;
    overflow: hidden;
}

.card-image img {
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
}

.card:hover .card-image img {
    transform: scale(1.05);
}

.card-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    border-top: 1px solid var(--border-color);
    padding-top: 0.5rem;
}

.card-title {
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    max-width: 70%;
}

.card-meta {
    font-size: 0.9rem;
    color: var(--secondary-text);
    text-align: right;
}

.price {
    color: var(--accent-color);
    font-weight: 700;
}

/* Artist List (Text Based) */
.artist-list-item {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 700;
    text-transform: uppercase;
    border-bottom: 1px solid var(--border-color);
    padding: 2rem 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
}

.artist-list-item:hover {
    color: var(--accent-color);
    padding-left: 2rem;
    /* Indent on hover */
    transition: all 0.3s ease;
}

/* Kratex Split Layout */
.hero-split {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
}

@media (min-width: 900px) {
    .hero-split {
        grid-template-columns: 1fr 1fr;
        height: 80vh;
        align-items: center;
    }
}

.hero-text h1 {
    font-size: clamp(4rem, 10vw, 8rem);
    line-height: 0.9;
    letter-spacing: -3px;
    margin-bottom: 2rem;
}

.hero-text p {
    font-size: 1.2rem;
    padding-left: 4rem;
    border-left: 2px solid var(--accent-color);
    max-width: 500px;
}

/* Footer */
footer {
    padding: 6rem 2rem;
    border-top: 2px solid var(--border-color);
    margin-top: 4rem;
}

.footer-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    margin-bottom: 4rem;
}

.footer-nav a {
    font-size: 2rem;
    font-weight: 700;
    text-transform: uppercase;
}

.copyright {
    color: var(--secondary-text);
    font-size: 0.8rem;
    text-transform: uppercase;
}

/* Utility */
.btn {
    display: inline-block;
    background: var(--text-color);
    color: var(--bg-color);
    padding: 1rem 2rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-top: 2rem;
}

.btn:hover {
    background: var(--accent-color);
    color: #fff;
}